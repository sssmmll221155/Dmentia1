{
  "name": "cognitive-tracker",
  "version": "1.0.0",
  "description": "Browser-based cognitive tracking system",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=server",
    "build": "npm run build --workspace=client && npm run build --workspace=server",
    "migrate": "npm run migrate --workspace=server",
    "migrate:dev": "npm run migrate:dev --workspace=server",
    "computeDailySummaries": "npm run computeDailySummaries --workspace=server"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
